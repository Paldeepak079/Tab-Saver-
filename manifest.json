{
  "manifest_version": 3,
  "name": "Deepak Pal",
  "version": "3.4",
  "description": "Automatically saves and manages your browser tabs with enhanced features",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "webNavigation",
    "downloads",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 